{
  "name": "threadjuice",
  "version": "1.0.0",
  "description": "Transform Reddit threads into viral content",
  "main": "index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "npm run kill-ports && next dev -p 4242",
    "kill-ports": "lsof -ti:4242 | xargs kill -9 2>/dev/null || true",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test"
  },
  "keywords": [
    "reddit",
    "content",
    "viral",
    "nextjs",
    "ai"
  ],
  "author": "Dean Newton",
  "license": "MIT",
  "dependencies": {
    "@clerk/nextjs": "^6.22.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@sentry/nextjs": "^7.64.0",
    "@supabase/supabase-js": "^2.31.0",
    "@tanstack/react-query": "^4.39.2",
    "@tanstack/react-query-devtools": "^5.80.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "geist": "^1.0.0",
    "lucide-react": "^0.263.1",
    "next": "^15.3.3",
    "openai": "^5.5.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-modal-video": "^2.0.0",
    "swiper": "^10.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.0",
