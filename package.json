    "jest-extended": "^6.0.0",
    "msw": "^2.10.2",
    "postcss": "^8.5.6",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "react-fast-marquee": "^1.6.5",
    "sass": "^1.64.2",
    "tailwindcss": "3.3.3",
    "typescript": "5.1.6",
    "typewriter-effect": "^2.22.0",
