# =============================================================================
# THREADJUICE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# =============================================================================
# APPLICATION CONFIG
# =============================================================================
NODE_ENV=development
PORT=4242
NEXT_PUBLIC_APP_URL=http://localhost:4242

NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# =============================================================================
# AUTHENTICATION - CLERK
# =============================================================================
# Get your keys from: https://dashboard.clerk.com/last-active?path=api-keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# =============================================================================
# DATABASE - POSTGRESQL/PRISMA
# =============================================================================
# PostgreSQL connection string for Prisma
DATABASE_URL=postgresql://username:password@localhost:5432/threadjuice
DIRECT_URL=postgresql://username:password@localhost:5432/threadjuice

# =============================================================================
# AI & CONTENT GENERATION - OPENAI
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# =============================================================================
# CONTENT INGESTION - REDDIT API
# =============================================================================
# Create app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=ThreadJuice/1.0

# =============================================================================
# TWITTER API V2 - DRAMA DETECTION
# =============================================================================
# Get your credentials from: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Drama detection settings - FREE TIER LIMITS (100 API calls/month)
TWITTER_DRAMA_ENABLED=true
TWITTER_DRAMA_MAX_STORIES_PER_DAY=1
TWITTER_DRAMA_MAX_CALLS_PER_DAY=3
TWITTER_DRAMA_MIN_ENGAGEMENT=500
TWITTER_DRAMA_MIN_DRAMA_SCORE=80

# =============================================================================
# EXTERNAL MEDIA APIS (OPTIONAL)
# =============================================================================
# Unsplash: https://unsplash.com/developers
# UNSPLASH_ACCESS_KEY=your_unsplash_access_key
# WIKIMEDIA_USER_AGENT=ThreadJuice/1.0

# Klipy API for GIF reactions: https://klipy.com/
NEXT_PUBLIC_KLIPY_API_KEY=your_klipy_api_key_here

# =============================================================================
# RATE LIMITING & MODERATION
# =============================================================================
RATE_LIMIT_ENABLED=false
CONTENT_MODERATION_ENABLED=false

# =============================================================================
# ANALYTICS & MONITORING (OPTIONAL)
# =============================================================================
# Vercel Analytics: https://vercel.com/analytics
# Sentry: https://sentry.io/
# VERCEL_ANALYTICS_ID=your_vercel_analytics_id
# SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# EMAIL SERVICE (OPTIONAL)
# =============================================================================
# Resend: https://resend.com/
# RESEND_API_KEY=your_resend_api_key_here

# =============================================================================
# REDIS CACHE (OPTIONAL)
# =============================================================================
# For rate limiting and caching
# REDIS_URL=redis://localhost:6379